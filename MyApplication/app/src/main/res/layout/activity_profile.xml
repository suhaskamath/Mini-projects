<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/background">
<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/contain">
<LinearLayout
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:onClick="back">
    <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"



            android:src="@drawable/back"/>
    <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Back"
            android:gravity="center"
            android:textSize="28sp"
        />

</LinearLayout>
<LinearLayout
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="200dp"
        android:onClick="edit"
        >
    <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"


            android:src="@drawable/edit"/>
    <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="28sp"

        android:text="Edit"/>
</LinearLayout>
</LinearLayout>
    <com.mikhaellopez.circularimageview.CircularImageView android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_below="@id/contain"
            android:layout_centerHorizontal="true"
            android:id="@+id/img"
            android:src="@drawable/profile"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="300dp">

        <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Profile"
                android:textSize="36sp" />

        <TextView
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile"
                android:layout_marginTop="20dp"
                android:textSize="24sp"

                />

        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/salary"
                android:layout_marginTop="20dp"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/marks1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender"
                android:layout_marginTop="20dp"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/marks2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/marks1"
                android:layout_marginTop="20dp"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/marks3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/marks2"
                android:layout_marginTop="20dp"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/marks3"
                android:layout_marginTop="20dp"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginTop="20dp"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginTop="20dp"
                android:textSize="24sp" />

    </RelativeLayout>


</RelativeLayout>