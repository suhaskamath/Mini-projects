<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".teacher_home"
        android:background="@color/grey">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/background">

                    <TextView

                            style="@android:style/Widget.DeviceDefault.Light.TextView"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/teacher_home"
                            android:textColor="@color/white"
                            android:background="@drawable/dash_board_text"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp"
                            />

                    <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/teacher" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    android:orientation="vertical"
                        android:layout_marginTop="215dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                 >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp"
                                >
                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/resume"
                                        android:layout_centerInParent="true"
                                        android:id="@+id/image_profiles"/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:text="Profile Verifcation"
                                        android:layout_centerInParent="true"
                                        android:layout_below="@+id/image_profiles"
                                        />

                                <Button
                                        android:id="@+id/buttonprofile"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:onClick="verifyprofile" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp"

                                >
                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/user"
                                        android:layout_centerInParent="true"
                                        android:id="@+id/vimage_profiles"/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:text="Verified Profile"
                                        android:layout_centerInParent="true"
                                        android:layout_below="@+id/vimage_profiles"
                                        />
                                <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/verified"
                                        android:background="@android:color/transparent"
                                        android:onClick="verified"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                        >
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/add"
                            android:layout_centerInParent="true"
                                    android:id="@+id/add_company"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                android:textSize="16sp"
                                    android:text="Add Company"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/add_company"
                                    />
                            <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                android:id="@+id/add_company_button"
                                    android:onClick="addcompany"
                                android:background="@android:color/transparent"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                            >
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/update"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/update_placement_info"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Update Placement Details"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/update_placement_info"
                                    />

                            <Button
                                    android:id="@+id/update_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:onClick="placement_details" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:orientation="horizontal"
                            >
                        <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:background="@drawable/blank_round"

                                >
                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/enterprise"
                                        android:layout_centerInParent="true"
                                        android:id="@+id/view_company"/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:text="Company Details"
                                        android:layout_centerInParent="true"
                                        android:layout_below="@+id/view_company"
                                        />
                                <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/view_company_button"
                                        android:background="@android:color/transparent"
                                        android:onClick="view_company"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <TextView
                            android:layout_marginTop="50dp"
                            android:id="@+id/total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Total Placed:10/30"
                            android:textSize="36dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/dash_board_text"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>